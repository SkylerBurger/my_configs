{
	// Place your snippets for django-html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Div tag": {
		"prefix": "div",
		"body": "<div>$0</div>",
		"description": "Generate a <div> tag"
	},
	"H1 tag": {
		"prefix": "h1",
		"body": "<h1>$1</h1>$0",
		"description": "Generate level 1 header tag"
	},
	"H2 tag": {
		"prefix": "h2",
		"body": "<h2>$1</h2>$0",
		"description": "Generate level 2 header tag"
	},
	"H3 tag": {
		"prefix": "h3",
		"body": "<h3>$1</h3>$0",
		"description": "Generate level 3 header tag"
	},
	"H4 tag": {
		"prefix": "h4",
		"body": "<h4>$1</h4>$0",
		"description": "Generate level 4 header tag"
	},
	"Image tag": {
		"prefix": "img",
		"body": "<img src=\"\" alt=\"\" />$0",
		"description": "Generate an <img> tag"
	},
	"Form tag": {
		"prefix": "form",
		"body": [
			"<form action=\"\" method=\"$1\">{% csrf_token %}",
			"    $0",
			"</form>"
		],
		"description": "Generate a <form> tage"
	},
	"Input tag": {
		"prefix": "input",
		"body": "<input type=\"$1\" value=\"$2\" />$0",
		"description": "Generate an <input> tag"
	},
	"P tag": {
		"prefix": "p",
		"body": "<p>$1</p>$0",
		"description": "Generate a <p> tag"
	},
	"Anchor tag": {
		"prefix": "a",
		"body": "<a href=\"\">$0</a>",
		"description": "Generate an anchor, <a>, tag"
	},
	"Head tag": {
		"prefix": "head",
		"body": [
			"<head>",
			"    $0",
			"</head>"
		],
		"description": "Generate a <head> tag"
	},
	"HTML Template": {
		"prefix": "html",
		"body": [
			"<html>",
			"    <head>",
			"        <title>$1</title>",
			"    </head>",
			"    <body>",
			"        $0",
			"    </body>",
			"</html>"
		],
		"description": "Generate a generic HTML layout"
	},
	"Link tag": {
		"prefix": "link",
		"body": "<link href=\"\" rel=\"\" />$0",
		"description": "Generate a <link> tag"
	},
	"Button tag": {
		"prefix": "button",
		"body": "<button type=\"$1\">$2</button>$0",
		"description": "Generate a <button> tag"
	},
}